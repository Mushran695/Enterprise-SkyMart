# COPY to .env and fill values before deploying. Do NOT commit secrets.

# MongoDB connection string. For production use your Atlas URI, for local testing the compose file
# provides a `mongo` container and a default MONGO_URI is included in `.env`.
MONGO_URI=mongodb://mongo:27017/skymart

# Common
NODE_ENV=development

# Kafka bootstrap brokers for internal services
KAFKA_BROKERS=kafka:9092

# Redis
REDIS_URL=redis://redis:6379

# JWT and session
JWT_SECRET=change_me_to_a_strong_secret

# Service-specific optional keys (payment providers, smtp, etc.)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Example: set external base URL for monolith fallback proxies
MONOLITH_URL=http://host.docker.internal:5000
# Example env for local testing
MONGO_URI=mongodb://localhost:27017/skymart
JWT_SECRET=your_jwt_secret_here
MONOLITH_URL=http://host.docker.internal:5000
